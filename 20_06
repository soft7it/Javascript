<script>

function hi( name ){
    if( name == undefined ){
        console.log("Salut!!!");
    }else{

    console.log("Salut" + name + " !!!");
  }
}

function bye( name ){
    if( name == undefined ){
        console.log("Hai, davai!");
    }else{

    console.log("Hai, davai!" + name + " !!!");
  }
}


