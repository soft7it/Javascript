<script>

function mult ( a, b ){
    if( b == undefined || a == undefined ){
        alert("Nu o venit  valoarea");
    }
    
    else{
    var result = a * b;
    alert( a + " inmultiti la " + b + " = " + result );
}
}

mult( 10, 20 );
mult();

</script>

///////////////

<script>

function mult ( a, b ){
    if( b != undefined && a != undefined ){
        var result = a * b;
    alert( a + " inmultiti la " + b + " = " + result );
    }
    
    else{
    alert("Nu o venit  valoarea");
}
}

mult( 10, 20 );
mult();

</script>

