<script>
    //Es6 -> declaram o clasa

    // reprezinta o clasa pentru viitoarele obiecte.
  
  class Person{
      // structura
      constructor(name, year, study, citezen){  // intelege ca functie - linia de asamblare
       var current_year = new Date().getFullYear(); // afiseaza anu automat.
       this.name = name;
       this.lastname = "Personalici"
       this.age = current_year - year;
       this.study = study;
       this.citezen = citezen;

      }
      hello(){
          alert("Hi!!");
      }

      who () {
          alert("My name is " + this.name + " " + this.lastname)
      }
      
  }

  // creem obiecte de tipul Person

  var p1 = new Person("Ivan", 1990, "medii", "canada");
  var p2 = new Person("Maria", 1980, "profesionale", "germania");
  var p3 = new Person("Vasilii", 1970, "academice", "englez");  
    p2.hello();  // la toate - p - se poate de pus - helllo -
    p2.who();
  console.log(p1,p2,p3);

</script>

