// for

for( start ; expression ; step){
    // code repeat - cod mai intelegent
}
//////////////////////

 start; 
for(; expression ; ){
    // code repeat - cod mai intelegent
    step;
}


/////////////////
start ;

while( expression ){
    // code to repeat
    step;
}
////////////////////se vede in console +++


for( var n = 1 ; n<=10 ; n++){
    // code repeat - cod mai intelegent
    console.log(n);
}

 ///////////////////////se vede in console ---

for( var n = 10 ; n>=1 ; n--){
    // code repeat - cod mai intelegent
    console.log(n);
}


/////////////////////

for( var n = 1 ; n<=10 ; n++){
    // code repeat - cod mai intelegent
    if(n%2){ // numere impare ===  sau daca punem(n%2-1) apare pare
    console.log(n);
}}

