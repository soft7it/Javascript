//  HW - do while;    do{code to repeat}  while(expression);
//  www.codecombat.com  - jok de antrenare gindire
//   code.org  pentru progaming


switch ( expression ) { // === compara valoarea strikt si identic.
    case value1:code;break; // break -> paraseste constructia.
    case value2:code;break;
    case value3:code;break;
    // alte cazuri
    default:code;break;
}

////////////////////////////

var day = prompt("A cita zi a saptaminii este azi ?");

switch ( day ) {
    case "1":alert("Mo");break;
    case "2":alert("Tu");break;
    case "3":alert("Wd");break;
    case "4":alert("Th");break;
    case "5":alert("Fr");break;
    case "6":alert("Sa");break;
    case "7":alert("Su");break;
    // alte cazuri
    default:alert("valoarea gresita!");break;
}

/////////////////////

// niste produse alimentare la cantina.

var pret_salata = 15;
var pret_omleta = 25;
var optiune;
var total = 0;

while ( optiune!="x") {

optiune = prompt("Alege\n1) Salata\n2) Omleta");

switch (optiune ) {
    case "1":
    alert("Ati ales \"Salata\".");
    var a_salata = prompt("Cit doriti ?");
    alert("Pretul este - " + a_salata * pret_salata + "lei");
    total +=;// !!
    break;

    case "2":
    alert("Ati ales \"Omleta\".");
    var a_omleta = prompt("Cit doriti ?");
    alert("Pretul este - " + a_omleta * pret_omleta + "lei");
    total +=; //!!
    break;
  
    // alte cazuri
    default:alert("nu exista asa meniu!");break;
}
}

